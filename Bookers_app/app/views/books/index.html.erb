<% if flash[:notice] %>
      <div class="flash">
      <%= flash[:notice] %>
     </div>
<% end %>
<h1>Books</h1>

    <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
        <tr>
        <td><%= book.title %></td>
        <td><%= book.body %><td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit",edit_book_path(book) %></td>
        <td><%= link_to "Destroy",book_path(book),method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <% end %>
    </tbody>
    </table>
    <h2>New book</h2>
    <% if @book.errors.any? %>
     <div class="alert alert-warning">
       <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
       <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
     </div>
    <% end %>
        <%= form_for(@book) do |f|%>
        <div>
        <p>Title</p>
        <%= f.text_field :title %>
        </div>
        <div>
        <p>Body</p>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' ,style:"display: block;"%>
        </div>
    <% end %>

